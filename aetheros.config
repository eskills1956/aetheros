# Aether OS Project Configuration

PROJECT_NAME="Aether OS"
PROJECT_VERSION="1.0.0"
PROJECT_CODENAME="Aurora"
PROJECT_ROOT="/home/eskills/Development/aetheros"

# Build configuration
DEFAULT_BUILD_TYPE="eng"
DEFAULT_TARGET_ARCH="arm64"
PARALLEL_JOBS="8"

# Paths
KERNEL_DIR="$PROJECT_ROOT/src/kernel"
SYSTEM_DIR="$PROJECT_ROOT/src/system"
APPS_DIR="$PROJECT_ROOT/src/apps"
OUT_DIR="$PROJECT_ROOT/out"
SDK_DIR="$PROJECT_ROOT/sdk"

# Features
ENABLE_FLUTTER=true
ENABLE_WAYLAND=true
ENABLE_PIPEWIRE=true
ENABLE_SYSTEMD=true
ENABLE_NETWORKMANAGER=true
ENABLE_SELINUX=true
ENABLE_VERIFIED_BOOT=true

# Development
DEBUG_BUILD=false
ENABLE_TESTS=true
ENABLE_DOCUMENTATION=true
